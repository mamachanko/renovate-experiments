{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "enabledManagers": [
    "gomod",
    "regex"
  ],
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "regexManagers": [
    {
      "fileMatch": [
        "Makefile"
      ],
      "matchStrings": [
        "RENOVATE_VERSION \\?= (?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "renovate",
      "datasourceTemplate": "npm"
    }
  ],
  "packageRules": [
    {
      "labels": [
        "dependencies",
        "javascript"
      ],
      "matchFileNames": [
        "Makefile"
      ],
      "schedule": [
        "every sunday"
      ],
      "semanticCommitScope": "node-tooling",
      "semanticCommitType": "ci"
    }
  ],
  "semanticCommits": "enabled"
}
