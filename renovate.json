{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "enabledManagers": [
    "custom.regex"
  ],
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "regexManagers": [
    {
      "customType": "regex",
      "description": "Update tool versions matching '*_VERSION' and marked with '# renovate: datasource=<datasource> depName=<depName>( packageName=<packageName>)'. See https://regex101.com/r/PeGsNX/1.",
      "fileMatch": ["Makefile", "ci/.*"],
      "matchStrings": [
        "#\\!? renovate: datasource=(?<datasource>[a-z-]+)?(?: depName=(?<depName>[a-z-]+))?(?: packageName=(?<packageName>[a-z\\/-]+))?(?: versioning=(?<versioning>[a-z-]+))?\\s+.+_VERSION(\\s?.?=\\s?|: )(?<yamlAnchor>\\&[a-z-]+ )?(?<currentValue>.+?)\\s"
      ]
    }
  ],
  "semanticCommits": "enabled"
}
